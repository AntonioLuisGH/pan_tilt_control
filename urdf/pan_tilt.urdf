<?xml version="1.0"?>
<robot name="pan_tilt_turret">

  <material name="grey">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>
  <material name="black">
    <color rgba="0.1 0.1 0.1 1"/>
  </material>
  <material name="red">
    <color rgba="0.8 0.0 0.0 1"/>
  </material>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.01" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <link name="link_1_post">
    <visual>
      <origin xyz="0 0 0.0725" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.145" radius="0.02"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>

  <joint name="base_to_post" type="fixed">
    <parent link="base_link"/>
    <child link="link_1_post"/>
    <origin xyz="0 0 0"/>
  </joint>

  <joint name="pan_joint" type="revolute">
    <parent link="link_1_post"/>
    <child link="link_2_pan"/>
    <origin xyz="0 0 0.145" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-2.35" upper="2.35" effort="10" velocity="1.0"/>
  </joint>

  <link name="link_2_pan">
    <visual>
      <origin xyz="0 0 0.0375" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.075" radius="0.02"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>

  <joint name="tilt_joint" type="revolute">
    <parent link="link_2_pan"/>
    <child link="link_3_tilt"/>
    <origin xyz="0 0 0.075" rpy="0 -1.5708 0"/> 
    <axis xyz="0 -1 0"/> <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <link name="link_3_tilt">
    <visual>
      <origin xyz="0.0215 0 0" rpy="0 0 0"/> 
      <geometry>
        <box size="0.043 0.04 0.01"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <joint name="laser_joint" type="fixed">
    <parent link="link_3_tilt"/>
    <child link="laser_frame"/>
    
    <origin xyz="0.043 0 0" rpy="0 1.5708 0"/> 
  </joint>

  <link name="laser_frame">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.02"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

</robot>